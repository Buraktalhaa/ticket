generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URI")
}

// postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA

model Auth {
  id           String @id @default(uuid())
  email        String @unique
  name         String
  password     String
  token        Token? 

  User User?
}

model Token {
  id            String   @id @default(uuid())
  email          String   @unique
  auth         Auth     @relation(fields: [email], references: [email])
  accessToken   String
  refreshToken  String

  createdAt     DateTime @default(now())
}


model User {
  id       String  @id @default(uuid())
  name     String
  surname  String
  birthday String
  active   Boolean @default(true)

  email     String   @unique
  auth    Auth     @relation(fields: [email], references: [email])
  Card     Card[]
}

model Card {
  id              String @id @default(uuid())
  userId          String
  cardInformation String @db.Text
  user            User   @relation(fields: [userId], references: [id])
}

model Permission {
  id         String  @id @default(uuid())
  userId     String
  roleId     String
  role   Role    @relation(fields: [roleId], references: [roleId])
}

enum RoleType {
  USER
  SELLER
  ADMIN
}

model Role {
  Id          String       @id @default(uuid())
  name        RoleType
  permissions Permission[]
}

// Auth Table
// id, email, hashedPassword, refreshToken

// User Table
// userId, name, surname, email, birthday, picture, active

// Card Table
// id, userId, cardInformation, user

// Permission Table
// id, userID, roleId, user, role

